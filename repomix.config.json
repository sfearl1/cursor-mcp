{
  "ignore": {
    "useGitignore": false,
    "customPatterns": [
      "node_modules",
      "dist",
      "build",
      ".cursor",
      "src/cursor-template",
      "README.md",
      ".gitignore",
      "package.json",
      "package-lock.json",
      "LICENSE"
    ]
  },
  "output": {
    "filePath": "codebase.xml",
    "style": "xml",
    "compress": false,
    "fileSummary": true,
    "directoryStructure": true,
    "removeComments": false,
    "removeEmptyLines": false,
    "showLineNumbers": false,
    "includeEmptyDirectories": false
  }
}
